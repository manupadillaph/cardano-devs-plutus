library
  hs-source-dirs:      src
  exposed-modules:     Deploy
                     , ValidatorLocker
                     , ValidatorAlwaysTrue
                     , ValidatorAlwaysFalse
                     , ValidatorBeneficiary
                     , ValidatorDeadline
                     , ValidatorRedeemer
                     , MintPolicyFree
                     , MintPolicyNFT
                     , MintPolicyPlus
                     , MintPolicySigned
                     , Utils
                     
  build-depends:       aeson
                     , base ^>=4.14.1.0
                     , bytestring
                     , cardano-api
                    , cardano-crypto-class
                     , cardano-ledger-core
                     , cardano-ledger-shelley
                     , cardano-wallet-core
                     , containers
                     , data-default
                     , freer-extras
                     , playground-common
                     , plutus-contract
                     , plutus-ledger
                     , plutus-ledger-api
                     , plutus-ledger-constraints
                     , plutus-tx-plugin
                     , plutus-tx
                     , serialise
                     , text
                     , openapi3
                     , prettyprinter
                     --, plutus-pab
                     --, plutus-use-cases
                     
              


  default-language:    Haskell2010
  ghc-options:         -Wall -fobject-code -fno-ignore-interface-pragmas -fno-omit-interface-pragmas -fno-strictness -fno-spec-constr -fno-specialise

executable deploy-smart-contracts-manual-exe
  main-is: Main.hs

  hs-source-dirs:
      app
  
  build-depends:
      base ^>=4.14.1.0,
      smart-contracts
  default-language: Haskell2010

executable deploy-smart-contracts-auto-exe
  main-is: Main-auto.hs

  hs-source-dirs:
      app
  
  build-depends:
      base ^>=4.14.1.0,
      smart-contracts
  default-language: Haskell2010


executable token-name
  main-is: token-name.hs
  hs-source-dirs:      app
  ghc-options:         -Wall
  build-depends:       base ^>= 4.14.1.0
                     , smart-contracts
