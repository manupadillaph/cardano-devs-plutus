library
  hs-source-dirs:      src
  exposed-modules:     Deploy
                     , Validators.Locker
                     , Validators.Locker.OffChain
                     , Validators.Locker.OnChain
                     , Validators.Locker.PAB
                     , Validators.Locker.Test
                     , Validators.Locker.Typos
                     , Validators.AlwaysTrue
                     , Validators.AlwaysTrue.OffChain
                     , Validators.AlwaysTrue.OnChain
                     , Validators.AlwaysTrue.PAB
                     , Validators.AlwaysTrue.Test
                     , Validators.AlwaysTrue.Typos
                     , Validators.AlwaysFalse
                     , Validators.AlwaysFalse.OffChain
                     , Validators.AlwaysFalse.OnChain
                     , Validators.AlwaysFalse.PAB
                     , Validators.AlwaysFalse.Test
                     , Validators.AlwaysFalse.Typos
                     , Validators.Beneficiary
                     , Validators.Beneficiary.OffChain
                     , Validators.Beneficiary.OnChain
                     , Validators.Beneficiary.PAB
                     , Validators.Beneficiary.Test
                     , Validators.Beneficiary.Typos
                     , Validators.Deadline
                     , Validators.Deadline.OffChain
                     , Validators.Deadline.OnChain
                     , Validators.Deadline.PAB
                     , Validators.Deadline.Test
                     , Validators.Deadline.Typos
                     , Validators.Redeemer
                     , Validators.Redeemer.OffChain
                     , Validators.Redeemer.OnChain
                     , Validators.Redeemer.PAB
                     , Validators.Redeemer.Test
                     , Validators.Redeemer.Typos
                     , Validators.StakeSimple
                     , Validators.StakeSimple.OffChain
                     , Validators.StakeSimple.OnChain
                     , Validators.StakeSimple.OnChainNFT
                     , Validators.StakeSimple.PAB
                     , Validators.StakeSimple.Test
                     , Validators.StakeSimple.Typos
                     , Validators.StakeSimple.OnChainHelpers
                     , Validators.StakeSimple.OffChainHelpers
                     , Validators.StakeSimple.Helpers
                     , MintingPolicies.Free
                     , MintingPolicies.NFT
                     , MintingPolicies.Plus
                     , MintingPolicies.Signed
                     , Utils
                     
  build-depends:       aeson
                     , base ^>=4.14.1.0
                     , bytestring
                     , cardano-api
                     , cardano-crypto-class
                     , cardano-ledger-core
                     , cardano-ledger-shelley
                     , cardano-wallet-core
                     , containers
                     , data-default
                     , freer-extras
                     , playground-common
                     , plutus-contract
                     , plutus-ledger
                     , plutus-ledger-api
                     , plutus-ledger-constraints
                     , plutus-tx-plugin
                     , plutus-tx
                     , serialise
                     , text
                     , openapi3
                     , prettyprinter
                     , plutus-pab
                     , plutus-use-cases
                    , lens
                    , freer-simple
                    
  default-language:    Haskell2010
  ghc-options:         -Wall -fobject-code -fno-ignore-interface-pragmas -fno-omit-interface-pragmas -fno-strictness -fno-spec-constr -fno-specialise

executable deploy-smart-contracts-manual
  main-is: deploy-smart-contracts-manual.hs
  hs-source-dirs:
      app
  build-depends:
      base ^>=4.14.1.0,
      smart-contracts
  default-language: Haskell2010

executable deploy-smart-contracts-auto
  main-is: deploy-smart-contracts-auto.hs
  hs-source-dirs:
      app
  build-depends:
      base ^>=4.14.1.0,
      smart-contracts
  default-language: Haskell2010


executable utils-token-name
  main-is: utils-token-name.hs
  hs-source-dirs:      app
  ghc-options:         -Wall
  build-depends:       base ^>= 4.14.1.0
                     , smart-contracts

executable utils-payment-key-hash
  main-is: utils-payment-key-hash.hs
  hs-source-dirs:      app
  ghc-options:         -Wall
  build-depends:       base ^>= 4.14.1.0
                     , smart-contracts

executable utils-stake-key-hash
  main-is: utils-stake-key-hash.hs
  hs-source-dirs:      app
  ghc-options:         -Wall
  build-depends:       base ^>= 4.14.1.0
                     , smart-contracts



executable pab-api-server
  main-is: pab-api-server.hs
  hs-source-dirs:      app
  ghc-options:         -Wall -threaded -rtsopts -with-rtsopts=-N
