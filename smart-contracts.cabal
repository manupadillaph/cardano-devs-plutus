  --------------------
  -- IOG dependencies
  --------------------
  build-depends:
                       cardano-api
                     , cardano-crypto-class
                     , cardano-ledger-core
                     , cardano-ledger-shelley
                     , cardano-wallet-core
                     , data-default
                     , playground-common
                     -- , plutus-chain-index-core
                     , plutus-contract
                     -- , plutus-core
                     , plutus-ledger
                     , plutus-ledger-api
                     , plutus-ledger-constraints
                     --, plutus-script-utils
                     , plutus-pab
                     , plutus-use-cases
                     , plutus-tx
                     , plutus-tx-plugin      

  ------------------------
  -- Non-IOG dependencies
  ------------------------
  build-depends:
                       aeson
                     , base >= 4.9 && < 5
                     , bytestring
                     , containers
                     , freer-extras
                     , freer-simple
                     -- , hashable
                     , lens
                     , openapi3
                     , prettyprinter
                     -- , semigroups
                     , serialise
                     -- , streaming
                     -- , template-haskell
                     , text
                     , stm 
                     , old-locale
                     , time
                     , directory
                     , MissingH
                    --  , stm , time, old-locale,directory  en test2
                    
  default-language:    Haskell2010
  ghc-options:         -Wall -fobject-code -fno-ignore-interface-pragmas -fno-omit-interface-pragmas -fno-strictness -fno-spec-constr -fno-specialise

